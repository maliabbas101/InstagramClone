<h2>Search results</h2>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Full Name</th>
      <th>User Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user.id) %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
      </tr>
    <%end%>
  </tbody>
</table>
