<% @users.each do |user| %>
  <%if user != current_user%>
    <% if user.posts.any?%>
      <% user.posts.each do |post|%>
        <div class="card m-5">
          <div class="card-header">
            <%if user.avatar.attached?%>
              <%= image_tag user.avatar ,width:"20", height:"20",class:"rounded-circle"%>
            <%else%>
              <%= image_tag 'person_icon.png',width:"20", height:"20",class:"rounded-circle"%>
            <%end%>
            <%= user.username%>
          </div>
          <div class="card-body">
            <%= image_tag post.images.first, width:"800" , height:"500"%>
            <br>
            <%if post.caption?%>
              <%=post.caption%>
            <%end%>
            <br>
            <br>
            <div class="post-actions">
              <%= link_to (image_tag 'unlike.svg', width:"20", height:"20",class:"mr-2")%>
              <%=link_to (image_tag 'comment.svg', width:"20", height:"20"), post%>
            </div>
            <p class="text-muted"><%= time_ago_in_words post.created_at%> ago</p>
          </div>
        </div>
      <%end%>
      <br>
    <%end%>
  <%end%>
<% end %>
