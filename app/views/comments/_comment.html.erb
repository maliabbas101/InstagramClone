<% unless !comment.persisted? %>
  <%= image_tag avatar_selection(user_details(comment.user_id)) , width:"20", height:"20", class:"rounded-circle"%>
  <strong><%= username(comment.user_id)%></strong>
    <%= comment.body%>
    <%if current_user== comment.post.user%>
      <%= link_to image_tag('edit.svg', width:"20", height:"20"), edit_post_comment_path(@post.id,comment.id),class:"ml-3"%>
       <%= link_to image_tag('trash.svg', width:"20", height:"20"), post_comment_path(@post.id,comment.id), method: :delete, data: { confirm: 'Are you sure?' },class:"ml-3"%>
    <%end%>
    <br>
   <br>
<% end %>






