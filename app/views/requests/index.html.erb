<h2>Recieved Requests</h2>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Full Name</th>
      <th>User Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <%if !user_details(request.requester_id).following?(current_user)%>
        <tr>
          <td><%= user_details(request.requester_id).full_name %></td>
          <td><%= username(request.requester_id)%></td>
          <td><%= user_details(request.requester_id).email %></td>
          <td>  <%= link_to 'Accept', accept_req_path(requester_id: user_details(request.requester_id).id ) , method: :post, class:"btn btn-success" %>  <%= link_to 'Decline', request_path(request.id) ,method: :delete, class:"btn btn-danger" %>
          </td>
        </tr>
      <%end%>
    <%end%>
  </tbody>
</table>
